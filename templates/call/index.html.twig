{% extends 'base.html.twig' %}

{% block title %}Call index{% endblock %}

{% block body %}
    <h1>Call index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Made_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for call in calls %}
            <tr>
                <td>{{ call.id }}</td>
                <td>{{ call.madeAt ? call.madeAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('call_show', {'id': call.id}) }}">show</a>
                    <a href="{{ path('call_edit', {'id': call.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('call_new') }}">Create new</a>
{% endblock %}
